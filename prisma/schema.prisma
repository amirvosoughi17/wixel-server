generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                Int        @id @default(autoincrement())
  name              String
  phoneNumber       String
  companyName       String
  description       String
  typeOfWeb         WebType
  monthlyUsersCount UsersCount
  likedWebsiteUrls  String[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}


model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  bio         String
  badge       String
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Showcase {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  teches        String[]
  image         String
  category      String
  instagramHref String
  webHref       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum WebType {
  ecommerce
  learning
  company
  personal
  startup
}

enum UsersCount {
  TEN
  FIFTY
  FIVE_HUNDRED
  ONE_THOUSAND
}
